node{
    stage('SCM Checkout'){
        git credentialsId: 'git-creds', url: 'https://github.com/Reorks9/todolist-frontend.git'
    }
    stage('Git clone'){
    	sh 'git clone https://github.com/Reorks9/todolist-frontend.git ./'
    }
    stage('Build app'){
        sh 'npm Install'
        sh 'npm run build:dev'
        sh 'cp ./src/environments/environment.ts ./src/environments/environment.dev.ts'
    }
    stage('Copy files to server'){
        def CopyFiles = 'scp -r /var/lib/jenkins/workspace/front_app/dist/* ubuntu@192.168.0.4:/home/ubuntu/app/frontend/dist'
        sshagent(['dev-server']) {
            sh "ssh -o StrictHostKeyChecking=no ubuntu@192.168.0.4 ${CopyFiles}"
        }
    }
}
